# Build stage
FROM maven:3.9.9-eclipse-temurin-17 AS build
WORKDIR /app
COPY pom.xml /app/pom.xml
COPY user-service/pom.xml /app/user-service/pom.xml
COPY monitoring-service/pom.xml /app/monitoring-service/pom.xml
RUN mvn -q -e -DskipTests package -Pskip -pl monitoring-service -am || true
COPY monitoring-service /app/monitoring-service
RUN mvn -q -DskipTests -pl monitoring-service -am package

# Run stage
FROM eclipse-temurin:17-jre
WORKDIR /app
COPY --from=build /app/monitoring-service/target/monitoring-service-0.1.0.jar app.jar
EXPOSE 8081
ENTRYPOINT ["java","-jar","/app/app.jar"]
